<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.EditProductActivity">

    <!--Toolbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@drawable/shape_rect01">
        <ImageButton
            android:id="@+id/backBtn"
            android:src="@drawable/ic_back_white"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Edit Product"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <!--Form to input data-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/productIconIv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_add_shopping_primary"
                />

            <EditText
                android:id="@+id/titleEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_title_grey"
                android:layout_below="@id/productIconIv"
                android:hint="Title"
                android:drawablePadding="10dp"
                android:inputType="textPersonName|textCapWords"
                android:padding="10dp"
                android:layout_margin="5dp"/>
            <EditText
                android:id="@+id/descriptionEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_title_grey"
                android:layout_below="@id/titleEt"
                android:hint="Description"
                android:drawablePadding="10dp"
                android:inputType="textCapSentences|textMultiLine"
                android:padding="10dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/categoriesTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_categories_grey"
                android:drawableEnd="@drawable/ic_down_grey"
                android:layout_below="@id/descriptionEt"
                android:hint="Category"
                android:drawablePadding="10dp"
                android:inputType="textCapSentences|textMultiLine"
                android:padding="10dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/quantityEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_cart_grey"
                android:layout_below="@id/categoriesTv"
                android:hint="Quantity e.g. kg, g etc."
                android:drawablePadding="10dp"
                android:inputType="textCapWords"
                android:padding="10dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/priceEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_cart_grey"
                android:layout_below="@id/quantityEt"
                android:hint="Price"
                android:drawablePadding="10dp"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:layout_margin="5dp"/>

            <!--Wheter or not product on discount-->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/discountSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_below="@id/priceEt"
                android:text="Discount"
                />

            <EditText
                android:id="@+id/discountedEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_cart_grey"
                android:layout_below="@id/discountSwitch"
                android:hint="Discount Price"
                android:drawablePadding="10dp"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/discountedNoteEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect02"
                android:drawableStart="@drawable/ic_cart_grey"
                android:layout_below="@id/discountedEt"
                android:hint="Discount Note e.g. 10% Off"
                android:drawablePadding="10dp"
                android:inputType="textCapSentences"
                android:padding="10dp"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/updateProductBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Update Product"
                android:layout_below="@id/discountedNoteEt"
                style="@style/Widget.AppCompat.Button.Colored"
                android:minWidth="150dp"
                android:layout_marginTop="5dp"
                />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>